{
  "name": "archivarius",
  "version": "0.1.0",
  "description": "high performance and dependency free database for microservices",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec \"npm run build && node dist/dev.js\"",
    "build": "rm -rf dist && babel ./src/ -d ./dist/",

    "test": "nodemon --config test/nodemon.json --exec \"npm run test-start\"",
    "test-reset": "rm -rf test/.local && mkdir test/.local && mkdir test/.local/test0 && mkdir test/.local/test1 && mkdir test/.local/test2",
    "test-start": "npm run test-reset && mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nodecitadel/archivarius.git"
  },
  "keywords": [
    "database",
    "file"
  ],
  "author": "Rus Inozemtsev",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nodecitadel/archivarius/issues"
  },
  "homepage": "https://github.com/nodecitadel/archivarius#readme",
  "devDependencies": {
    "@babel/cli": "^7.6.4",
    "@babel/core": "^7.6.4",
    "@babel/preset-env": "^7.6.3",
    "mocha": "^6.2.2",
    "nodemon": "^1.19.4"
  },
  "nodemonConfig": {
    "verbose": true,
    "watch": ["src"],
    "delay": 500
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  }
}
